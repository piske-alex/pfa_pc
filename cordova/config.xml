<?xml version='1.0' encoding='utf-8'?>
<widget id="com.pfa.mobileapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>PFA</name>
    <description>
        A mobile app for the PFA cryptocurrency.
    </description>
    <author>
        PFA Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <icon src="./www/ic_launcher.jpeg" />
    <engine name="browser" spec="^6.0.0" />
    <engine name="android" spec="^8.0.0" />
    <engine name="ios" spec="^5.0.1" />
</widget>
